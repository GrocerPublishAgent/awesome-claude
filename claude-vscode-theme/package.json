{
  "name": "claude-vscode-theme",
  "displayName": "Claude VSCode Theme",
  "description": "A sleek and minimalistic theme for VSCode inspired by Claude's design language",
  "version": "1.0.1",
  "publisher": "AlvinUnreal",
  "license": "MIT",
  "type": "module",
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "claude",
    "minimal",
    "clean",
    "dark",
    "anthropic"
  ],
  "icon": "logo.png",
  "galleryBanner": {
    "color": "#C15F3C",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alvinunreal/awesome-claude.git"
  },
  "bugs": {
    "url": "https://github.com/alvinunreal/awesome-claude/issues"
  },
  "contributes": {
    "themes": [
      {
        "label": "Claude Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/claude-dark.json"
      },
      {
        "label": "Claude Dark High Contrast",
        "uiTheme": "vs-dark",
        "path": "./themes/claude-dark-high-contrast.json"
      }
    ],
    "configuration": {
      "title": "Claude VSCode Theme",
      "properties": {
        "claude.accentColor": {
          "scope": "application",
          "type": "string",
          "default": "crail",
          "description": "Controls which accent color to use",
          "enum": [
            "crail",
            "orange",
            "blue",
            "purple",
            "green",
            "teal"
          ]
        },
        "claude.italicComments": {
          "scope": "application",
          "type": "boolean",
          "default": true,
          "markdownDescription": "Controls whether to use *italics* for comments."
        },
        "claude.italicKeywords": {
          "scope": "application",
          "type": "boolean",
          "default": true,
          "markdownDescription": "Controls whether to use *italics* for keywords."
        },
        "claude.boldKeywords": {
          "scope": "application",
          "type": "boolean",
          "default": true,
          "markdownDescription": "Controls whether to use **bold** for keywords."
        },
        "claude.bracketMode": {
          "scope": "application",
          "type": "string",
          "default": "rainbow",
          "description": "Controls how bracket pairs should be themed",
          "enum": [
            "rainbow",
            "dimmed",
            "monochromatic"
          ],
          "enumDescriptions": [
            "Uses 6 rainbow colors for matching bracket pairs.",
            "Uses the same 6 rainbow colors as rainbow, but dimmed.",
            "A monochromatic appearance for matching bracket pairs."
          ]
        },
        "claude.workbenchMode": {
          "scope": "application",
          "type": "string",
          "default": "default",
          "description": "Controls how the workbench should be styled",
          "enum": [
            "default",
            "flat",
            "minimal"
          ],
          "enumDescriptions": [
            "The default look with depth and shadows",
            "A flatter look with reduced shadows",
            "A minimal look with clean lines"
          ]
        }
      }
    }
  },
  "scripts": {
    "build": "tsx build.ts",
    "dev": "tsx build.ts --dev",
    "package": "vsce package",
    "compile": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0"
  }
}
